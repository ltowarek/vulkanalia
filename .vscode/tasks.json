{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build",
            "command": "cmake --build .",
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Configure",
            "command": "cmake .. -G \"Visual Studio 15 Win64\"",
            "type": "shell",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "taskName": "Clean",
            "command": "rmdir /S /Q build && mkdir build",
            "type": "shell",
            "problemMatcher": []
        }
    ]
}
